<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Registro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Registro.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="#515151"
    Shell.FlyoutWidth="250"
    FlyoutHeaderBehavior="CollapseOnScroll">

    <FlyoutItem Title="Home">
        <ShellContent ContentTemplate="{DataTemplate local:Pantalla_Principal}"/>
    </FlyoutItem>
    <FlyoutItem Title="Actividad">
        <ShellContent ContentTemplate="{DataTemplate local:Actividad}"/>
    </FlyoutItem>
    <FlyoutItem Title="Historial">
        <ShellContent ContentTemplate="{DataTemplate local:Historial}"/>
    </FlyoutItem>
</Shell>
